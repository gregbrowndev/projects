{
  "extends": "@tsconfig/node16/tsconfig.json", // optional but nice to have
  "version": "4.4.2",
  "compilerOptions": {
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"]
}
