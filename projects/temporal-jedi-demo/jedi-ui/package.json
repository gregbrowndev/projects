{
  "name": "jedi-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all -l build:temporal --parallel dev:temporal dev:next start:worker",
    "dev:temporal": "tsc --build --watch src/temporal/tsconfig.json",
    "dev:next": "next dev",
    "build": "npm-run-all -l --parallel build:next build:temporal",
    "build:temporal": "tsc --build src/temporal/tsconfig.json",
    "build:next": "next build",
    "start": "next start",
    "start:worker": "nodemon src/temporal/lib/worker",
    "lint": "next lint",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "format": "prettier --write .",
    "clean": "rm -rf node_modules .next src/temporal/lib src/temporal/*.tsbuildinfo",
    "WIP:dev": "npm-run-all -l --parallel dev:worker dev:next",
    "WIP:dev:worker": "nodemon --watch 'src/temporal/**/*.ts' --exec 'yarn compile:worker && node src/temporal/lib/worker'",
    "WIP:compile:worker": "tsc --build src/temporal/tsconfig.json"
  },
  "dependencies": {
    "@temporalio/activity": "^1.4.4",
    "@temporalio/client": "^1.4.4",
    "@temporalio/worker": "^1.4.4",
    "@temporalio/workflow": "^1.4.4",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.8",
    "cookies-next": "^2.1.1",
    "eslint": "8.27.0",
    "eslint-config-next": "13.0.2",
    "next": "13.0.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "4.8.4"
  },
  "devDependencies": {
    "@headlessui/react": "^1.7.4",
    "@temporalio/testing": "^1.4.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@tsconfig/node16": "^1.0.3",
    "autoprefixer": "^10.4.13",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.2.2",
    "ts-node-dev": "^2.0.0"
  }
}
