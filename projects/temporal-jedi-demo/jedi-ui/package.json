{
  "name": "jedi-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all -l build:temporal --parallel dev:temporal dev:next start:worker",
    "dev:next": "next dev",
    "dev:temporal": "tsc --build --watch ./temporal/tsconfig.json",
    "build:next": "next build",
    "build:temporal": "tsc --build ./temporal/tsconfig.json",
    "start": "next start",
    "start:worker": "nodemon ./temporal/lib/worker",
    "lint": "next lint",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@temporalio/activity": "^1.4.4",
    "@temporalio/client": "^1.4.4",
    "@temporalio/worker": "^1.4.4",
    "@temporalio/workflow": "^1.4.4",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.8",
    "eslint": "8.27.0",
    "eslint-config-next": "13.0.2",
    "next": "13.0.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "4.8.4"
  },
  "devDependencies": {
    "@temporalio/testing": "^1.4.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@tsconfig/node16": "^1.0.3",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1"
  }
}
